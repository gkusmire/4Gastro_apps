<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="#tableNn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tableNumberTextView"
                    android:layout_weight="1"/>
            <TextView
                    android:text="#startTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/startTimeTextView" android:layout_weight="1"/>
            <TextView
                    android:text="#finishTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/finishTimeTextVIew"
                    android:layout_weight="1"/>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>